<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Player</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <%= @players_by_team.each do |playerStats| %>
   <%= playerStats.name %><br>
   <%= playerStats.position %><br>
   <%= playerStats.university %><br>
   <% end %>
  <br>
  <br>
  <br>
  <br>
  
  <%= @teams_by_division.each do |divisionTeam| %>
   <%= divisionTeam.name %><br>
   <% end %>
  <br>
  <br>
  <br>
  <br>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.team %></td>
        <td><%= record.player %></td>
        <td><%= record.division %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

